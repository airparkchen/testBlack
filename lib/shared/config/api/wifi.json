{
  "baseUrl": "http://192.168.1.1",
  "apiVersion": "/api/v1",
  "timeoutSeconds": 10,
  "endpoints": {
    "systemInfo": {
      "path": "$apiVersion/system/info",
      "method": "get",
      "description": "獲取系統資訊"
    },
    "systemMeshTopology": {
      "path": "$apiVersion/system/mesh_topology",
      "method": "get",
      "description": "獲取網格拓撲資訊"
    },
    "wizardStart": {
      "path": "$apiVersion/wizard/start",
      "method": "post",
      "description": "開始設定精靈配置"
    },
    "wizardFinish": {
      "path": "$apiVersion/wizard/finish",
      "method": "post",
      "description": "完成設定精靈配置並應用設定"
    },
    "wanEthGet": {
      "path": "$apiVersion/network/wan_eth",
      "method": "get",
      "description": "獲取以太網廣域網路設定"
    },
    "wanEthUpdate": {
      "path": "$apiVersion/network/wan_eth",
      "method": "put",
      "description": "更新以太網廣域網路設定"
    },
    "wirelessBasicGet": {
      "path": "$apiVersion/wireless/basic",
      "method": "get",
      "description": "獲取無線基本設定"
    },
    "wirelessBasicUpdate": {
      "path": "$apiVersion/wireless/basic",
      "method": "put",
      "description": "更新無線基本設定"
    },
    "userChangePassword": {
      "path": "$apiVersion/user/change_password",
      "method": "put",
      "description": "使用SRP方法更改用戶密碼"
    },
    "userLogin": {
      "path": "$apiVersion/user/login",
      "method": "post",
      "description": "使用者SRP驗證登入"
    }
  }
}